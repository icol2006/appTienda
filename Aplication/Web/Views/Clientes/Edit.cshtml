@model DAL.Models.Cliente

@{
    ViewBag.Title = "Editar Cliente";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="card-head">
                <header>Editar Cliente</header>
                <button id="panel-button"
                        class="mdl-button mdl-js-button mdl-button--icon pull-right hidden"
                        data-upgraded=",MaterialButton">
                    <i class="material-icons">more_vert</i>
                </button>
                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                    data-mdl-for="panel-button">
                    <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                    <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                    <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                </ul>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           

            <div class="card-body row">
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width disabled">
                        @Html.EditorFor(model => model.CodCli, new { htmlAttributes = new { @class = "mdl-textfield__input", @readonly = "readonly", @style = "background: #f7f7f7;" } })
                        @Html.LabelFor(model => model.CodCli, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.CodCli, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.nomcli, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.nomcli, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.nomcli, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.numdoc, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.numdoc, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.numdoc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 p-t-20">
                    @Html.LabelFor(model => model.tipdoc, "CodLin", htmlAttributes: new { @class = "mdl-textfield__label col-md-2" })
                    <br />
                    @Html.DropDownListFor(model => model.tipdoc, new SelectList(
                    new List<Object>{
                    new { value = "01" , text = "DNI"  },
                    new { value = "02" , text = "RUC" },
                    new { value = "03" , text = "Carnet de extrajeria" },
                    },
                    "value",
                    "text",
                    2), new { @class = "form-control" })
                    <br />
                </div>
                <div class="col-lg-6 p-t-20">
                    @Html.LabelFor(model => model.estado, "Estado", htmlAttributes: new { @class = "mdl-textfield__label col-md-2" })
                    <br />
                    @Html.DropDownListFor(model => model.estado, new SelectList(
                    new List<Object>{
                    new { value = "001" , text = "Activo"  },
                    new { value = "002" , text = "Anulado" },
                    },
                    "value",
                    "text",
                    2), new { @class = "form-control" })
                    <br />
                </div>
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.correo, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row col-12">
                    <div class="col-6 text-left">
                        @Html.ActionLink("reply_all", "Index", null, new { @class = "material-icons", data_toggle = "tooltip", data_placement = "top", title = "Volver", @style = "color:black" })
                    </div>

                    <div class="col-6 text-right">
                        <button type="submit" class="material-icons" data-toggle="tooltip" data-placement="top" title="Grabar">save</button>
                    </div>
                </div>

            </div>
            }

        </div>

    </div>

</div>



<div class="row">
    <div class="col-md-12">
        <div class="card card-topline-red">
            <div class="card-head">
                <header>Domicilio</header>
                <div class="tools hidden">
                    <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                    <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body ">
                <div class="row p-b-20">
                    <div class="col-md-6 col-sm-6 col-6">
                        <div class="btn-group">
                            @Html.ActionLink("Crear Nuevo Domicilio", "Create", "DomClis", new { CodCli = Model.CodCli.Trim() },  new { @class = "btn btn-success btn-rounded waves-effect waves-light m-t-20" })
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column full-width" id="example4">
                    <thead>
                        <tr>
                            <th>
                                Cod
                            </th>
                            <th>
                                Informacion de domicilio
                            </th>
                            <th>
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.DomCli)
                        {
                        <tr class="odd gradeX">
                            <td>
                                @Html.DisplayFor(modelItem => item.CodDom)
                            </td>

                            <td>
                                Direccion:
                                @Html.DisplayFor(modelItem => item.direccion)
                                <br />
                                Estado:
                                @if (item.estado.Equals("001"))
                                {
                                <span>Activo</span> 
                                }
                                else
                                {
                                    <span>Desactivado</span>                                    
                                }
                                <br />
                                Telefono
                                @Html.DisplayFor(modelItem => item.telefono)
                                <br />
                                Correo
                                @Html.DisplayFor(modelItem => item.correo)
                            </td>
                            <td>
                                @Html.ActionLink("create", "Edit", "DomClis", new { CodCli = item.CodCli.Trim(), CodDom = item.CodDom.Trim() }, new { @class = "material-icons", @style = "color:black", data_toggle = "tooltip", data_placement = "top", title = "Editar" })
                            </td>
                            <td>
                                @Html.ActionLink("delete", "Delete", "DomClis", new { CodCli = item.CodCli.Trim(), CodDom = item.CodDom.Trim() }, new { @class = "material-icons", @style = "color:black", data_toggle = "tooltip", data_placement = "top", title = "Eliminar" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>