@model IEnumerable<DAL.Models.DomCli>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("content_copy", "Create",null, new { @class = "material-icons", @style = "color:black", data_toggle = "tooltip", data_placement = "top", title = "Nuevo" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.nomcli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.nomcli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @if (item.estado.Equals("001"))
            {
                <span class="label label-sm box-shadow-1 label-success">Activo</span>
            }
            else
            {
                <span class="label label-sm box-shadow-1 label-warning">Desactivado </span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { codDom = item.CodDom, codCli = item.CodCli  }) |
            @Html.ActionLink("Details", "Details", new { codDom = item.CodDom, codCli = item.CodCli }) |
            @Html.ActionLink("Delete", "Delete", new { codDom = item.CodDom, codCli = item.CodCli })
        </td>
    </tr>
}

</table>
