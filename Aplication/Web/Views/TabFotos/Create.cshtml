@model DAL.Models.TabFotos



@{
    ViewBag.Title = "Nueva Foto";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="card-head">
                <header>Nueva Foto</header>
                <button id="panel-button"
                        class="mdl-button mdl-js-button mdl-button--icon pull-right hidden"
                        data-upgraded=",MaterialButton">
                    <i class="material-icons">more_vert</i>
                </button>
                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                    data-mdl-for="panel-button">
                    <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                    <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                    <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                </ul>
            </div>
            @using(Html.BeginForm("Create", "TabFotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="card-body row">
                <div class="form-group hidden">
                    <div class="col-md-10 ">
                        @Html.DropDownList("Codigo", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-12">
                    <div class="col-3 pull-left" style="margin-bottom:15px">
                        <div class="row">
                            @Html.TextBox("file", null, htmlAttributes: new { Type = "file", @class = "btn-file" })

                        </div>
                    </div>
                </div>

                <div class="row col-12">
                    <div class="col-6 text-left">
                        @Html.ActionLink("reply_all", "Edit", "Productos", new { id = ViewBag.Producto }, new { @class = "material-icons", data_toggle = "tooltip", data_placement = "top", title = "Volver", @style = "color:black" })
                    </div>

                    <div class="col-6 text-right">
                        <button type="submit" class="material-icons" data-toggle="tooltip" data-placement="top" title="Grabar">save</button>
                    </div>
                </div>


            </div>
            }


        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
