@model DAL.Models.TabFotos



@{
    ViewBag.Title = "Editar Linea Producto";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="card-head">
                <header>Editar Linea Producto</header>
                <button id="panel-button"
                        class="mdl-button mdl-js-button mdl-button--icon pull-right hidden"
                        data-upgraded=",MaterialButton">
                    <i class="material-icons">more_vert</i>
                </button>
                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                    data-mdl-for="panel-button">
                    <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                    <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                    <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                </ul>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Tipo)
                @Html.HiddenFor(model => model.Codigo)
                @Html.HiddenFor(model => model.item)


            <div class="card-body row">

                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 p-t-20">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                        @Html.EditorFor(model => model.foto, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.LabelFor(model => model.foto, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(model => model.foto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-12 p-t-20 text-right">
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink">Salvar</button>
                </div>

                <div>
                    @Html.ActionLink("Volver", "Edit","Productos", new { id = Model.Codigo.Trim() }, null)
                </div>
            </div>
            }


        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
